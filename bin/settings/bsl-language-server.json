{
    "$schema": "https://1c-syntax.github.io/bsl-language-server/dev/configuration/schema.json",
    "language": "ru",
    "codeLens": {
        "showCognitiveComplexity": true,
        "showCyclomaticComplexity": true
    },
    "diagnostics": {
        "computeTrigger": "onSave",
        "mode": "all",
        "parameters": {
            "TernaryOperatorUsage": true,
            "LineLength": {
                "maxLineLength": 140
            },
            "MissingSpace": false,
            "MagicNumber": {
                "authorizedNumbers": "-1,0,1,2,100"
            },
            "NestedFunctionInParameters": false,
            "Typo": {
                "userWordsToIgnore": "Структ,структ,Гуид,Ууид,Всд,Карантирование,Дозаказ,Дозаполнить,Дозаполнение,Дозаказа,Разузловать"
            }
        }
    }
}